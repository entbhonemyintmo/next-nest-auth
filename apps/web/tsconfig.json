{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": ".",
		"paths": {
			"@components/*": ["components/*"],
			// "@pages/*": ["pages/*"],
			// "@styles/*": ["styles/*"],
			// "@utils/*": ["utils/*"],
			// "@hooks/*": ["hooks/*"],
			// "@types/*": ["types/*"],
			// "@services/*": ["services/*"],
			// "@constants/*": ["constants/*"],
			"@/*": ["./*"]
		}
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
